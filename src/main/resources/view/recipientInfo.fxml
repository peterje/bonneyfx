<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.edmointel.bonneyfx.controller.RecipientInfoController">
    <children>
        <VBox alignment="CENTER" layoutX="-1.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <HBox alignment="CENTER" prefHeight="51.0" prefWidth="600.0">
                    <children>
                        <Label alignment="CENTER" text="Purchaser Info">
                            <font>
                                <Font name="System Bold" size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                         <TextField fx:id="purchaserName" promptText="Purchaser Name">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="recipientName" promptText="Recipient Name">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                         <DatePicker fx:id="dateOfBirth" promptText="Date of Birth">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </DatePicker>
                        <ToggleButton fx:id="isDeceased" mnemonicParsing="false" text="Deceased">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </ToggleButton>
                        <DatePicker fx:id="dateOfDeath" promptText="Date of Death">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </DatePicker>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <AnchorPane prefHeight="100.0" prefWidth="605.0">
                            <children>
                                <Button layoutX="448.0" layoutY="43.0" mnemonicParsing="false" onAction="#switchScene"
                                        text="Next"/>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
