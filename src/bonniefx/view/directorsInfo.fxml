<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bonniefx.controller.DirectorsInfoController">
    <children>
        <VBox alignment="CENTER" layoutY="-4.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="47.0" prefWidth="580.0">
                    <children>
                        <Label text="Director Setup">
                            <font>
                                <Font name="System Bold" size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="director0" alignment="CENTER" prefHeight="42.0" prefWidth="580.0" spacing="10.0">
                    <children>
                        <TextField fx:id="primaryName" promptText="Primary  Director">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="primaryPCT" prefHeight="29.0" prefWidth="71.0" promptText="Split %">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox fx:id="director1" alignment="CENTER" prefHeight="47.0" prefWidth="580.0" spacing="10.0">
                    <children>
                        <TextField fx:id="director1Name" promptText="Second Director">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField prefHeight="29.0" prefWidth="71.0" promptText="Split %">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox fx:id="director2" alignment="CENTER" prefHeight="23.0" prefWidth="580.0" spacing="10.0">
                    <children>
                        <TextField promptText="Third Director">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField prefHeight="29.0" prefWidth="71.0" promptText="Split %">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox fx:id="director3" alignment="CENTER" prefHeight="5.0" prefWidth="580.0" spacing="10.0">
                    <children>
                        <TextField promptText="Fourth Director">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField prefHeight="29.0" prefWidth="71.0" promptText="Split %">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="59.0" prefWidth="580.0">
                    <children>
                        <Button fx:id="removeDirectorBtn" mnemonicParsing="false" onAction="#removeDirector"
                                prefWidth="140.0" text="Remove Director">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="addDirectorBtn1" mnemonicParsing="false" onAction="#addDirector"
                                prefWidth="140.0" text="Add Director">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="switchButton" mnemonicParsing="false" onAction="#switchScene" text="Next">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</AnchorPane>
