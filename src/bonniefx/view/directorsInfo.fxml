<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bonniefx.controller.DirectorsInfoController">
    <children>
        <VBox alignment="CENTER" layoutY="-4.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="47.0" prefWidth="580.0">
                    <children>
                        <Label text="Director Setup">
                            <font>
                                <Font name="System Bold" size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="director0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="23.0" prefWidth="156.0" text="Primary Service Director:"/>
                        <TextField fx:id="primaryName"/>
                        <Label text="Split Percentage"/>
                        <TextField fx:id="primaryPCT" prefHeight="29.0" prefWidth="71.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox fx:id="director1" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="23.0" prefWidth="156.0" text="Director 1:"/>
                        <TextField fx:id="director1Name"/>
                        <Label text="Split Percentage"/>
                        <TextField prefHeight="29.0" prefWidth="71.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox fx:id="director2" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="23.0" prefWidth="156.0" text="Director 2:"/>
                        <TextField/>
                        <Label text="Split Percentage"/>
                        <TextField prefHeight="29.0" prefWidth="71.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox fx:id="director3" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="23.0" prefWidth="156.0" text="Director 3:"/>
                        <TextField/>
                        <Label text="Split Percentage"/>
                        <TextField prefHeight="29.0" prefWidth="71.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox prefHeight="59.0" prefWidth="580.0">
                    <children>
                        <AnchorPane prefHeight="39.0" prefWidth="580.0">
                            <children>
                                <Button fx:id="removeDirectorBtn" layoutX="131.0" layoutY="5.0" mnemonicParsing="false"
                                        onAction="#removeDirector" prefWidth="130.0" text="Remove Director"
                                        textFill="#c31b1b"/>
                                <Button fx:id="switchButton" layoutX="519.0" layoutY="5.0" mnemonicParsing="false"
                                        onAction="#switchScene" text="Next"/>
                                <Button fx:id="addDirectorBtn1" layoutX="290.0" layoutY="5.0" mnemonicParsing="false"
                                        onAction="#addDirector" prefWidth="130.0" text="Add Director"
                                        textFill="#16c625"/>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </children>
</AnchorPane>
